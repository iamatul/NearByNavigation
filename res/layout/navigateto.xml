<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backlogin1"
    android:gravity="center"
    android:orientation="horizontal" >

    <EditText
        android:id="@+id/edmy"
        android:layout_width="249dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:gravity="bottom"
        android:hint="Enter location"
        android:text=""
        android:textColor="#B0171F" />

    <EditText
        android:id="@+id/edend"
        android:layout_width="249dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/edmy"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:gravity="bottom"
        android:hint="Enter end point"
        android:text=""
        android:textColor="#B0171F" >

    </EditText>

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edend"
        android:layout_below="@+id/edend"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="48dp"
        android:gravity="start"
        android:onClick="onPostExecute"
        android:textColor="#B0171F"
        android:text="Get Directions"/>

</RelativeLayout>